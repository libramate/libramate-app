{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": false,

    "declaration": false,
    "sourceMap": false,

    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",

    "baseUrl": "./src"
  }
}
